              "required": true,
              "type": "string"
            },
            {
              "name": "x-access-token",
              "paramType": "header",
              "description": "Access token",
              "required": true,
              "type": "string"
            },
            {
              "name": "x-suppress-response-codes",
              "paramType": "header",
              "description": "If 'true', the HTTP response is always 200. Default = 'false'",
              "required": true,
              "type": "boolean",
              "defaultValue": "false"
            },
            {
              "name": "id",
              "paramType": "query",
              "description": "Color palette mnemonic. Must be unique for each tenant.",
              "required": true,
              "type": "string"
            },
            {
              "name": "hues",
              "paramType": "body",
              "description": "Hues for this palette",
              "required": true,
              "type": "array",
              "items": {
                "type": "Hue"
              }
            }
